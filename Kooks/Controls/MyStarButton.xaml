<UserControl x:Class="Kooks.Controls.MyStarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kooks.Controls"
             mc:Ignorable="d" >
    
    <StackPanel Name="StarStackPanel" Orientation="Horizontal" >
        <Button Name="Star0" Style="{StaticResource GrayStarButtonStyle}" Margin="3" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" Click="Star_Click"/>
        <Button Name="Star1"  Style="{StaticResource GrayStarButtonStyle}" Margin="3" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" Click="Star_Click" />
        <Button Name="Star2"  Style="{StaticResource GrayStarButtonStyle}" Margin="3" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" Click="Star_Click" />
        <Button Name="Star3" Style="{StaticResource GrayStarButtonStyle}" Margin="3" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" Click="Star_Click" />
        <Button Name="Star4" Style="{StaticResource GrayStarButtonStyle}" Margin="3" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" Click="Star_Click" />
    </StackPanel>
</UserControl>
