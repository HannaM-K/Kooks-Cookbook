<UserControl x:Class="Kooks.Controls.MyMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kooks.Controls"
             mc:Ignorable="d" Height="150" Width="300">
    <StackPanel Background="White">
        <Rectangle Height="30"/>
        <TextBlock Text="Czy na pewno chcesz usunąć zaznaczone przepisy?" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Height="40"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="YesButton" Content="Tak" FontWeight="Bold" BorderBrush="Black" Width="90" Height="30"/>
            <Rectangle Width="80"/>
            <Button Name="NoButton" Content="Nie" FontWeight="Bold" BorderBrush="Black" Width="90" Height="30" />
        </StackPanel>
    </StackPanel>
</UserControl>
